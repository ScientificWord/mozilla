		nsIClipboardOwner.idl \
		nsIRollupListener.idl \
		nsIMenuRollup.idl \
		nsIBaseWindow.idl \
		nsIBidiKeyboard.idl \
		nsIFullScreen.idl \
		nsINativeScrollbar.idl \
		nsIScreen.idl \
		nsIScreenManager.idl \
		nsIPrintSession.idl \
		nsIPrintSettings.idl \
