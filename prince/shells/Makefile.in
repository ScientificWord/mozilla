
DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@




include $(DEPTH)/config/autoconf.mk
include $(topsrcdir)/config/rules.mk

SHELL_RESOURCES := $(wildcard	$(srcdir)/*.sci) \
	$(NULL)

SHELL_RESOURCE_DIRECTORIES := $(wildcard	$(srcdir)/*_files)

libs::	$(SHELL_RESOURCES)	$(SHELL_RESOURCE_DIRECTORIES)
	-mkdir $(FINAL_TARGET)/shells
	-mkdir $(FINAL_TARGET)/shells/article
	cp	$(SHELL_RESOURCES)	$(FINAL_TARGET)/shells/article
	cp -R $(SHELL_RESOURCE_DIRECTORIES) $(FINAL_TARGET)/shells/article





	