DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@




include $(DEPTH)/config/autoconf.mk
include $(topsrcdir)/config/rules.mk

ifeq ($(OS_ARCH),WINNT)
  PLATFORM = win32
endif

ifeq ($(OS_ARCH),Linux)
  PLATFORM = linux
endif

ifeq ($(OS_ARCH),Darwin)
  PLATFORM = mac
endif

UTILITIES := $(wildcard	$(srcdir)/$(PLATFORM)/*)

libs::	$(UTILITIES)
	mkdir $(FINAL_TARGET)/utilities
	cp -R	${srcdir}/${PLATFORM}/*	$(FINAL_TARGET)/utilities

