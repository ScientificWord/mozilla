
DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk
include $(topsrcdir)/config/rules.mk

CSS_RESOURCES := $(wildcard	$(srcdir)/css/*.css)
XBL_RESOURCES := $(wildcard $(srcdir)/xbl/*.xml)

libs::	$(CSS_RESOURCES)
	$(INSTALL)	$(CSS_RESOURCES)	$(DIST)/bin/res/css

libs::	$(XBL_RESOURCES)
	$(INSTALL)	$(XBL_RESOURCES)	$(DIST)/bin/res/xbl






	