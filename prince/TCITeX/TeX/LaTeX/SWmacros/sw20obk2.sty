\def\@makechapterhead#1{%
 \null\nobreak
 \vskip-\topskip\vskip-\headsep\vskip-\headheight\vskip-\topmargin
 {\raggedright 
  \ifnum \c@secnumdepth >\m@ne 
   \vspace*{200pt}%
   \parindent0pt
   \Huge\bf\vskip-\baselineskip
   \@chapapp\ \thechapter \par 
   \vspace*{108pt}%
   \else
   \vspace*{308pt}%
   \fi 
  \huge \bf
  \vskip-\baselineskip
  #1\par 
  }%
 \nobreak \vskip 42pt
 }
