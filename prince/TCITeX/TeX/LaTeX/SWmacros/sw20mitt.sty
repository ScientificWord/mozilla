% Use \date as \thesisdate
\let\@thesisdate=\@date
\def\date#1{\gdef\@date{#1}\gdef\@thesisdate{#1}}

\def\thisdegree#1{\degree{#1}}

% Change \chairman{Chairman Name}{Chairman Title} to use
% \chairmanname{Chairman Name} and \chairmantitle{Chairman Title}
\def\chairmanname#1{\gdef\@chairmanname{#1}}
\def\chairmantitle#1{\gdef\@chairmantitle{#1}}

% Change \supervisor[Optional Title]{Supervisor Name}{Supervisor Title}
% to use \super{Supervisor Name} and
% \supertitle[Optional Title]{Supervisor Name}
\def\super#1{\gdef\@super{#1}}
\def\supertitle{\@ifnextchar[{\@supertitle}{\@supertitle[Thesis Supervisor]}}
\def\@supertitle[#1]#2{\setbox\@titlesupervisor\vbox
  {\unvbox\@titlesupervisor \vskip 10pt plus 1fil minus 1fil
  \def\baselinestretch{1}\large
  \signature{Certified by}{\@super \\ #2 \\ #1}}
  \setbox\@abstractsupervisor\vbox{\unvbox\@abstractsupervisor
  \vskip\baselineskip \def\baselinestretch{1}\@normalsize 
  \par\noindent #1: \@super \\ Title: #2}}

% Redefine the abstract environment to be the same as the
