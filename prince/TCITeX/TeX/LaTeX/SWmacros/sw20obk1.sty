% hard wires textheight in terms of topmargin headheight headsep footskip
% and botmargin. to make textheight adjust to page length I am using line below instead LJH

\addtolength{\textheight}{92pt}

\c@secnumdepth\z@

\ps@headings\let\sectionmark\@gobble
\def\ps@chapter{\ps@plain}%
\let\rulefooting\norulefooting
\let\headcase\@empty
\def\rectomark{\rightmark}%
\def\versomark{\leftmark}%

\def\@makechapterhead#1{%
 \null\nointerlineskip\nobreak
 \vskip-\topskip\vskip-\headsep\vskip-\headheight\vskip-\topmargin
 \ifnum \c@secnumdepth >\m@ne 
  \vspace*{188pt}%
  \hbox to\textwidth{\hskip-\marginparwidth\hskip-\marginparsep\leaders
   \hrule\hfil}%
  {\parindent44pt\Huge\bf \@chapapp{} \thechapter \par}%
  {\baselineskip 16pt 
   \hbox to\textwidth{\hskip-\marginparwidth\hskip-\marginparsep\leaders
    \hrule\hfil}%
   }%
  \else
  \vspace*{252pt}%
  \fi 
 \vskip52pt
 {\huge \bf\raggedright#1\par}%
 \nobreak \vskip 40pt
 }%
\let\introtext\dropletter

\def\section{%
 \@startsection{section}{1}{\z@}{-32pt plus -1.2ex minus -.2ex}%
  {20pt}{\LARGE\bf}%
 }%
\def\subsection{%
 \@startsection{subsection}{2}{\z@}{-24pt plus -1ex minus-.2ex}%
  {1pt}{\large\bf}%
 }%

\def\thefigure{\thechapter-\@arabic\c@figure}
