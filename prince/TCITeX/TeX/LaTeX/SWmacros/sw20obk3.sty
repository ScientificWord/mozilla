\def\@makechapterhead#1{%
 \null\nobreak
 \vskip-\topskip\vskip-\headsep\vskip-\headheight\vskip-\topmargin
 {%
  \vspace*{40pt}%
  \nointerlineskip
  \hbox to\textwidth{%
   \hskip-\marginparwidth\hskip-\marginparsep\leaders\hrule height6pt\hfil
   }%
  \LARGE\sf
  \vskip24pt
  \vskip-\baselineskip
  \leftskip-\marginpartotal plus1fil\parfillskip\z@skip\parindent\z@
  \ifnum\c@secnumdepth>\m@ne\thechapter\hfill\fi\uppercase{#1}\par 
  }%
 \nobreak \vskip 96pt
 }%
