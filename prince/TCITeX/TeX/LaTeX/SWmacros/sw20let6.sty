\def\do@letterhead{%
 \thispagestyle{letterhead}%
   \@tempswafalse
   \ifx\@empty\the@letterfromcompany\else\@tempswatrue\fi
   \ifx\@empty\the@letterfromaddr\else\@tempswatrue\fi
   \if@tempswa
      \begin{center}%
        \ifx\@empty\the@letterfromcompany\else
          {\bf\letparBL\the@letterfromcompany}%
        \fi
        \ifx\@empty\the@letterfromaddr\else 
          \\{\letparBL\the@letterfromaddr}%  Use to get addr on multiple lines
%          \\{\letparQD\the@letterfromaddr}%  Use to get addr on one line
        \fi
      \end{center}%
   \fi
 \@tempswafalse
 \ifx\@empty\the@letterdate\else\@tempswatrue\fi
 \ifx\@empty\@date\else\@tempswatrue\fi
 \if@tempswa
 \begin{flushright}\ignorespaces{\letparSP\do@date}\end{flushright}\fi
 \par
 }%
