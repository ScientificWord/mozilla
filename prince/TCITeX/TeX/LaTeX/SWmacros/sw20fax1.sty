\ps@memo
\def\@memohead{%
 \vbox{%
  \begin{center}\Huge
   \ifx\@empty\the@memoname\faxname\else{\letparBL\the@memoname}\fi
   \end{center}%
  \ifx\@empty\the@faxpg\else\bigskip
   \hbox to\hsize{\hskip.5\hsize\nopgname\the@faxpg\hfil}%
   \fi
  \ifx\@empty\the@memoto\else\bigskip
   \hangfield\headtoname{\letparBL: \ignorespaces\the@memoto}%
   \fi
  \@tempswafalse
  \ifx\@empty\the@memotofax\else\@tempswatrue\fi
  \ifx\@empty\the@memotophone\else\@tempswatrue\fi
  \if@tempswa\bigskip
   \hbox to\hsize{%
    \advance\hsize2em\divide\hsize\tw@\advance\hsize-2em\relax
    \vtop{%
     \ifx\@empty\the@memotofax\leavevmode\else
      \hangfield\faxshortname{\letparBL\ignorespaces\the@memotofax}%
      \fi
     }\hskip2em
    \vtop{%
     \ifx\@empty\the@memotophone\leavevmode\else
      \hangfield\phonenumname{\letparBL\ignorespaces\the@memotophone}%
      \fi
     }%
    }%
   \fi
  \ifx\@empty\the@memocc\else
   \hangfield\ccname{\letparBL: \ignorespaces\the@memocc}%
   \global\let\the@memocc\@empty
   \fi
  \@fromdatealign
  \@tempswafalse
  \ifx\@empty\the@memocompany\else\@tempswatrue\fi
  \ifx\@empty\the@memoaddr\else\@tempswatrue\fi
  \ifx\@empty\the@memofax\else\@tempswatrue\fi
  \ifx\@empty\the@memophone\else\@tempswatrue\fi
  \if@tempswa\bigskip
   \hbox{\faxfaultname}%
   \hbox{%
    \divide\hsize\tw@
    \hskip\hsize
    \vtop{%
     \def\\{\cr}\letparBL\def\crjot{\cr\ifdim\jot>\z@\noalign{\vskip\jot}\fi}%
     \halign{\vtop{\parindent\z@##}\cr
      \ifx\@empty\the@memocompany\else\the@memocompany\crjot\fi
      \ifx\@empty\the@memoaddr\else\the@memoaddr\crjot\fi
      \ifx\@empty\the@memophone\else\the@memophone\crjot\fi
      \ifx\@empty\the@memofax\else\faxnumname\the@memofax\crjot\fi
      \ifdim\jot>\z@\noalign{\vskip-\jot}\fi
      }%
     }%
    }%
   \fi
  \ifx\@empty\the@memoinstr\leavevmode\else
   \hangfield\headinstrname{\letparBL\ignorespaces\the@memoinstr}%
   \fi
  \ifx\@empty\the@memosubj\leavevmode\else
   \hangfield\headsubjname{\letparBL\ignorespaces\the@memosubj}%
   \fi
  }\nobreak\vskip24pt\raggedright
 }%
