\dropshadowwidth4pt
\def\@memohead{%
 \vbox{%
  \vskip\z@%Extra space between top of page and memodept
  \@tempswafalse
  \ifx\@empty\the@memocompany\else\@tempswatrue\fi
  \ifx\@empty\the@memoname\else\@tempswatrue\fi
  \ifx\@empty\the@memodept\else\@tempswatrue\fi
  \if@tempswa
   \begin{center}\@tempswafalse
    \ifx\@empty\the@memocompany
    \else\if@tempswa\\\fi
    \@tempswatrue{\bf\letparBL\the@memocompany\vspace{.1in}}\fi
    \ifx\@empty\the@memoname
    \else\if@tempswa\\\fi\@tempswatrue{\letparBL\the@memoname\vspace{.1in}}\fi
    \ifx\@empty\the@memodept
    \else\if@tempswa\\\fi\@tempswatrue{\letparBL\the@memodept\vspace{.1in}}\fi
    \end{center}%
   \fi
  \vskip\z@%Extra space between memodept and 'MEMO' box
    \setbox\z@\vbox{%
    \hrule\hbox spread 2pc{\vrule\hfil
     \vbox spread1pc{\vfil\Huge\bf\hbox{MEMO}\vfil}%
                           \hfil\vrule}\hrule
    }%
    \dimen@\wd\z@\dimen@i\ht\z@
    \hbox{\box\z@\rlap{\advance\dimen@i-\dropshadowwidth\vrule width
     \dropshadowwidth height\dimen@i}}\nointerlineskip
    \hbox{\hskip\dropshadowwidth\vrule height\dropshadowwidth width
     \dimen@}\vskip24pt
  \vskip\z@%Extra space between 'MEMO' box and the memo
    \jot9\p@
    \@memoalign\vskip6pt\hrule height 1pt
  }%
  \nobreak\vskip6pt\raggedright
}%

