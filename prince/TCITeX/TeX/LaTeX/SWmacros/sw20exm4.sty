% Exam style created for Pat Steer
% Title is 1" from top centered with Description, Subject, and Date 
% below the title.
% Description, Subject, and Date and page number are printed at the
% top right of all other pages.
% Textheight is 9", Textwidth is 6.5"
% This style will call a file called fancyheadings.sty, which will format
% the Fancy headings.
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%                              TITLE                                        %
%                              with                                         %
%                           DESCRIPTION                                     %
%                               and                                         %
%                             SUBJECT                                       %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
\def\maketitle{\par
 \begingroup
   \def\thefootnote{\fnsymbol{footnote}}%
   \def\@makefnmark{\hbox
       to\z@{$\m@th^{\@thefnmark}$\hss}}%
   \if@twocolumn
     \twocolumn[\@maketitle]%
     \else \newpage
     \global\@topnum\z@
     \@maketitle \fi\thispagestyle{empty}\@thanks
 \endgroup
 \setcounter{footnote}{0}%
 \let\maketitle\relax
 \let\@maketitle\relax
 \gdef\@thanks{}\gdef\@author{}\gdef\@title{}\let\thanks\relax}
%
\def\@maketitle{\newpage
 \null
 \vskip 2em
 \vskip -1.5in \vskip 0em
 \begin{center}%
  {\bf \LARGE \@title \par}%
  \vskip 1.5em
  {\large
   \lineskip .5em}
   \@ifundefined{Description}{}{{\bf \Description}\par}%
   \lineskip 1.5em
   \@ifundefined{Subject}{}{{\bf \Subject}\par}%
   \lineskip .5em
  {\bf \@date}%
 \end{center}%
 \par
 \vskip 1.5em}
