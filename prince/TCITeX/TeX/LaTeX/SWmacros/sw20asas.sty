%                                                                           %
%                       This is the Title                                   %
%                                                                           %
%***************************************************************************%
%
\def\maketitle{\par
 \begingroup
 \if@twocolumn 
 \twocolumn[\@maketitle] 
 \else\newpage
 \global\@topnum\z@ \@maketitle \fi\thispagestyle{plain}\@thanks
 \endgroup
 %\setcounter{footnote}{0}
 \let\maketitle\relax
 \let\@maketitle\relax
 \gdef\@thanks{}\let\thanks\relax}
\def\@maketitle{\newpage
 \null
\vskip -1.0in\vskip 0pt
 \begin{center}
 {\def\baselinestretch{1.25}\large{\bf\@title}\par}%
  \vskip1.5em{\large\lineskip .5em\par} 
\end{center}
 \par
 \small \hspace{-.10in}
\begin{tabular}[t]{c}\@author 
 \end{tabular}\par
 \vskip 1.5em
 %\vfill
 \begin{center}
 \received \par
 \end{center}
 \vskip 1.5em} 

