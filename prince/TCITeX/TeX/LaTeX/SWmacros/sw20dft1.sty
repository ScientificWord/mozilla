\def\KeyWordsPhrases{\textbf{Key Words and Phrases:\ }}
\def\AMSyr{2000}
\def\AMSsubject{\textbf{AMS \AMSyr\ Subject Classifications.}}
\def\AMSprim{Primary--}
\def\AMSsecond{Secondary--}


\def\@maketitle{%
	\null
	\thispagestyle{empty}
	\let\thefootnote@original=\thefootnote
	\def\thefootnote{}
	\ifx\keys\@empty
	\else
	   \footnote{\KeyWordsPhrases\keys}
	   \addtocounter{footnote}{-1}
	\fi
	\ifx\primcl\@empty
	\else
	   \footnote{\AMSsubject\ \AMSprim\primcl
           \ifx\secondcl\@empty
		     {}
			\else
			  ;\ \AMSsecond\secondcl
			\fi}
	   \addtocounter{footnote}{-1}
	\fi
	
	\let\thefootnote=\thefootnote@original
			   
    \begin{center}
         {\large\bf\@title}\\[4mm]
		 \ifx\runtitle\@empty
		 \else 
		    (Running Title: {\bf \runtitle})\\[4mm]
		 \fi
		 by \\[4mm]
		 \@author
    \end{center}
	\vskip .5in
}

