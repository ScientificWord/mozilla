% Use \POINTS{val} to place point values for exam
%  problems in the left margin.
% Use \RESUME to continue a list at the correct number
%  after interrupting it with text.



\def\POINTS#1{%
  \setbox0=\hbox{#1}%
  \null
  \hskip -\leftmargin
  \hskip -\wd0
  \unhbox0%
  \hskip \leftmargin
}

\def\SPACE#1{\vspace{#1}}

\def\RESUME{%
   \let\USECOUNTERORIGINAL=\usecounter
   \def\usecounter##1{%
       \@nmbrlisttrue
       \def\@listctr{##1}
       %\setcounter{##1}\z@   i.e. do not reset counter
	   \let\usecounter=\USECOUNTERORIGINAL
	}%
}




   
 

