      \ifnum \c@secnumdepth >\m@ne \@chapapp{} \thechapter.\quad \fi
      ##1\par}
      \bigskip\longthickhrule\bigskip}

\def\@makeschapterhead##1{\longthickhrule\bigskip
     {\secshape\parskip\z@\parindent\z@ \Large\bf ##1\par}
     \bigskip\longthickhrule\bigskip}

