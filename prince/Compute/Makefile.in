DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE = compute
LIBRARY_NAME = computelib

DIRS		=  libtci public Engines compsample2 Wrappers Testjig2

include $(topsrcdir)/config/config.mk

CPPSRCS =				\
  DefStore.cpp  \
  MRequest.cpp \
  MResult.cpp \
  PrefStor.cpp  \
  WorkShop.cpp  \
	$(NULL)

REQUIRES = \
  string \
  xpcom \
  enginewrapper \
  $(NULL)


LOCAL_INCLUDES	= -I$(srcdir)/libtci

# we don't want the shared lib, but we want to force the creation of a static lib.
FORCE_STATIC_LIB = 1

MuPADlib	:= \
			$(srcdir)/MuPAD/lib/lib.tar \
			$(srcdir)/MuPAD/lib/lib.toc \
			$(srcdir)/MuPAD/lib/sysinit.mu \
			$(wildcard $(srcdir)/MuPAD/lib/xmlprint.*) \
			$(NULL)

SupportFiles	:= \
			$(srcdir)/MuPAD/mupkernel.dll \
			$(srcdir)/swfcns.mu \
			$(srcdir)/tcifcns.m \
			$(NULL)

GMR_FILES := \
      $(srcdir)/MMLents.gmr \
      $(NULL)

EXPORTS		= \
		iCmpIDs.h \
		iCmpTypes.h \
		$(NULL)

include $(topsrcdir)/config/rules.mk

export:: $(MuPADlib)
	$(INSTALL) $(MuPADlib) $(DIST)/bin/MuPAD/lib

export:: $(SupportFiles) $(GMR_FILES)
	$(INSTALL) $(SupportFiles) $(GMR_FILES) $(DIST)/bin
