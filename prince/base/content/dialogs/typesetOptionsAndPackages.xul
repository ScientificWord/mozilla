<!DOCTYPE dialog SYSTEM "chrome://prince/locale/typesetOptionsAndPackages.dtd">

<dialog title="&windowTitle.label;"
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
    onload="Startup()"
    ondialogaccept="return onAccept();"
    ondialogcancel="return onCancel();">

  <script type="application/x-javascript" src="chrome://prince/content/editorUtilities.js"/>
  <script type="application/x-javascript" src="chrome://prince/content/EdDialogCommon.js"/>
  <script type="application/x-javascript" src="chrome://prince/content/typesetOptionsAndPackages.js"/>
  <script type="application/x-javascript" src="chrome://prince/content/typesetDialogUtils.js"/>
  <script type="application/x-javascript" src="chrome://prince/content/msiDialogUtilities.js"/>

  <!-- keyset>
    <key id="sw.tab-key" keycode="VK_TAB" oncommand="msiTabForward(event);"/>
    <key id="sw.shift-tab-key" keycode="VK_TAB" modifiers="shift" oncommand="msiTabBack(event);"/>
    <key id="sw.accept-key" keycode="VK_ENTER" oncommand="doOKButton();"/>
    <key id="sw.accept-key" keycode="VK_RETURN" oncommand="doOKButton();"/>
  </keyset -->


  <spacer id="location" offsetY="50" persist="offsetX offsetY"/>
  <!-- broadcasterset>
    <broadcaster id="enableDecorationsAround" disabled="false"/>
    <broadcaster id="enableDecorationsAboveBelow" disabled="false"/>
  </broadcasterset -->


	<tabbox>
	  <tabs>
		  <tab label="&classOptionsTab.label;"/>
		  <tab label="&packageOptionsTab.label;"/>
		</tabs>
		<tabpanels>
		  <tabpanel id="classOptionsPage">
			  <vbox>
					<description id="documentClassDescription" value='&classDescription.label;' replaceTemplate='&classDescription.templateStr;'/>
					<description value="&classOptions.label;"/>
					<hbox>
						<textbox id="optionsDescriptionBox" size='60' readonly='true'/>
						<spacer flex="1"/>
						<button id="modifyButton" label="&modifyClassOptionsButton.label;" accesskey="&modifyClassOptionsButton.accessKey;" oncommand="doModifyDialog();"/>
					</hbox>
				</vbox>
			</tabpanel>
			<tabpanel id="packageOptionsPage">
				<vbox>
			  <groupbox orient="horizontal">
				  <caption label="&packagesInUse.label;" accesskey="&packagesInUse.accessKey;"/>
					<listbox id="packagesInUseListbox" onselect="selectPackage(this.selectedItem.label);"/>
					<spacer flex="1"/>
					<vbox>
						<button id="moveUpButton" label="&moveUpButton.label;" accesskey="&moveUpButton.accessKey;" oncommand="movePackage(true);"/>
						<button id="moveDownButton" label="&moveDownButton.label;" accesskey="&moveDownButton.accessKey;" oncommand="movePackage(false);"/>
						<button id="addPackageButton" label="&addPackageButton.label;" accesskey="&addPackageButton.accessKey;" oncommand="addPackage();"/>
						<button id="removePackageButton" label="&removePackageButton.label;" accesskey="&removePackageButton.accessKey;" oncommand="removeCurrentlySelectedPackage();"/>
						<button id="goNativeButton" label="&goNativeButton.label;" accesskey="&goNativeButton.accessKey;" oncommand="goNative();"/>
					</vbox>
				</groupbox>
				<spacer flex="1"/>
				<groupbox orient='horizontal'>
					<caption id='currentPackageDescriptionCaption' label='&currentPackageDescription.label;' replaceTemplate='&currentPackageDescription.templateStr;'/>
				  <textbox id='currentPackageDescription' size='60' readonly='true'/>
					<button id="modifyPackageButton" label="&modifyPackageButton.label;" accesskey="&modifyPackageButton.accessKey;" oncommand="modifyCurrentlySelectedPackage();"/>
				</groupbox>
				</vbox>
			</tabpanel>
		</tabpanels>
	</tabbox>

</dialog>
