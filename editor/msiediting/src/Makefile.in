DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= msiediting
LIBRARY_NAME	= msiediting
FORCE_STATIC_LIB = 1
EXPORT_LIBRARY = 1
IS_COMPONENT	= 1
LIBXUL_LIBRARY	= 1
GRE_MODULE	= 1
MODULE_NAME  = msieditingModule

PACKAGE_FILE = msiediting.pkg

EXTRA_DSO_LIBS = \
	gkgfx \
	$(NULL)

EXTRA_DSO_LDOPTS = \
	$(LIBS_DIR)              \
	$(EXTRA_DSO_LIBS)        \
	$(MOZ_UNICHARUTIL_LIBS)  \
	$(MOZ_COMPONENT_LIBS)    \
    $(MOZ_JS_LIBS)           \
	$(TK_LIBS) \
    $(NULL)

REQUIRES  = xpcom \
            string \
            content \
            dom \
            editor \
            widget \
	          layout \
		        txmgr \
            gfx \
			txtsvc \
			view \
            widget \
            $(NULL)

CPPSRCS    = \
    msiEditingManager.cpp \
    msiMEditingBase.cpp \
    msiUtils.cpp \
    msiCoalesceUtils.cpp \
    msiEditingAtoms.cpp \
    msiNameSpaceUtils.cpp \
    msiMrowEditingImp.cpp \
    msiBigOpInfoImp.cpp \
    msiRequiredArgument.cpp \
    $(NULL)

    
SHARED_LIBRARY_LIBS = \
    insertion/$(LIB_PREFIX)msi_mml_insertion_s.$(LIB_SUFFIX) \
    caret/$(LIB_PREFIX)msi_mml_caret_s.$(LIB_SUFFIX) \
    coalesce/$(LIB_PREFIX)msi_mml_coalesce_s.$(LIB_SUFFIX) \
    $(NULL)                       

include $(topsrcdir)/config/rules.mk

INCLUDES += -I$(srcdir)/insertion \
            -I$(srcdir)/caret \
            -I$(srcdir)/coalesce \
            -I$(srcdir) 
            
