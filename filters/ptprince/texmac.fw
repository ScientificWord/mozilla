\chardef\other=12
\def\ttverbatim{\begingroup\catcode`\\=\other \catcode`\{=\other
  \catcode`\}=\other \catcode`\$=\other \catcode`\&=\other
  \catcode`\#=\other \catcode`\%=\other \catcode`\~=\other
  \catcode`\_=\other \catcode`\^=\other
  \obeyspaces\obeylines\tt}
\newskip\ttglue
{\tt\global\ttglue=.5em plus.25em minus .15em}


\catcode`\|=\active
{\gdef|{\ttverbatim\spaceskip=\ttglue\let|=\endgroup}}
\catcode`\|=\other

\outer\def\beginlines{%
   \par
   \begingroup
      \catcode`\|=\active
      \nobreak\medskip\parindent=0pt\parskip=0pt%
      \hrule\kern5pt\nobreak%
}
\def\endlines{\vskip5pt\hrule\endgroup\medbreak\noindent}

