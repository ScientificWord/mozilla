DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= msgbase
LIBRARY_NAME	= mailnews
ifeq ($(OS_ARCH),WINNT)
LIBRARY_NAME	= msgbase
RESFILE		= mail.res
endif
META_COMPONENT = mail
EXPORT_LIBRARY = 1
IS_COMPONENT	= 1
MODULE_NAME	= nsMsgBaseModule
MOZILLA_INTERNAL_API = 1

PACKAGE_FILE = msgbase.pkg

REQUIRES	= xpcom \
		  xpcom_obsolete \
		  string \
		  necko \
		  intl \
		  locale \
		  rdf \
		  content \
		  dom \
		  docshell \
		  widget \
		  layout \
		  mime \
		  uriloader \
		  mailnews \
		  addrbook \
		  mork \
		  txmgr \
		  pref \
		  msgcompose \
		  msgbaseutil \
		  msgdb \
		  appcomps \
		  msgnews \
		  msgimap \
		  gfx \
		  webbrwsr \
		  $(NULL)

ifeq ($(OS_ARCH),WINNT)
REQUIRES	+= appcomps
endif

CPPSRCS		= nsMsgFactory.cpp

SHARED_LIBRARY_LIBS = \
		../src/$(LIB_PREFIX)msgbase_s.$(LIB_SUFFIX) \
		../search/src/$(LIB_PREFIX)msgsearch_s.$(LIB_SUFFIX) \
		$(NULL)

ifeq ($(USE_SHORT_LIBNAME),1)
EXTRA_DSO_LIBS = msgbsutl
else
EXTRA_DSO_LIBS = msgbaseutil
endif

EXTRA_DSO_LDOPTS = \
		$(DEPTH)/rdf/util/src/$(LIB_PREFIX)rdfutil_s.$(LIB_SUFFIX) \
		$(LIBS_DIR) \
		$(EXTRA_DSO_LIBS) \
		$(MOZ_JS_LIBS) \
		$(MOZ_UNICHARUTIL_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(MOZ_XPCOM_OBSOLETE_LIBS) \
		$(NULL)

LOCAL_INCLUDES += -I$(srcdir) \
		-I$(srcdir)/../src \
		-I$(srcdir)/../search/src \
		-I$(srcdir)/../util \
		$(NULL)

include $(topsrcdir)/config/rules.mk

ifeq ($(OS_ARCH),WINNT)
OS_LIBS	+= $(call EXPAND_LIBNAME,shell32)
endif

ifneq (,$(filter cocoa mac, $(MOZ_WIDGET_TOOLKIT)))
OS_LIBS += -framework Carbon
endif
