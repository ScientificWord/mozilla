DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

# This makefile builds the unicharutil_external_s library which should be used
# by frozen (dependent) linkage components. Internal-linkage code should use
# unicharutil_s which is built in the internal/ subdirectory.

DIRS = internal

include $(srcdir)/objs.mk

MODULE=unicharutil
LIBRARY_NAME=unicharutil_external_s
DIST_INSTALL = 1
SDK_LIBRARY = $(LIBRARY)

REQUIRES=xpcom \
		string \
		$(NULL)

SDK_HEADERS = \
	nsUnicharUtils.h \
	$(NULL)

EXPORTS = \
	nsCompressedCharMap.h \
	nsBidiUtils.h \
	$(NULL)

CPPSRCS	= \
	nsUnicharUtils.cpp \
	nsBidiUtils.cpp \
	$(NULL)

FORCE_STATIC_LIB = 1
FORCE_USE_PIC = 1
USE_STATIC_LIBS = 1

include $(topsrcdir)/config/rules.mk

ifdef _MSC_VER
# Don't include directives about which CRT to use
OS_COMPILE_CXXFLAGS += -Zl
OS_COMPILE_CFLAGS += -Zl
DEFINES += -D_USE_ANSI_CPP
endif
