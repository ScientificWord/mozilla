DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= mozpango-dvngx
LIBRARY_NAME	= mozpango-dvngx
# See bug 201167 ("No CTL support in StaticBuilds")
FORCE_SHARED_LIB = 1
EXTRA_DSO_LIBS	= mozpango

CSRCS		= \
		dvng-x.c \
		$(NULL)

include $(topsrcdir)/config/rules.mk

LOCAL_INCLUDES	+= \
		-I$(srcdir)/../pangoLite \
		$(NULL)

ifdef MOZ_ENABLE_GTK2
  CFLAGS          += $(MOZ_GTK2_CFLAGS)
  EXTRA_DSO_LDOPTS += \
                  -L$(DIST)/lib \
                  $(EXTRA_DSO_LIBS) \
                  $(GLIB_LIBS) \
                  $(MOZ_GTK2_LIBS) \
                  $(NULL)
else
  CFLAGS           += $(GLIB_CFLAGS)
  EXTRA_DSO_LDOPTS += \
                  -L$(DIST)/lib \
                  $(EXTRA_DSO_LIBS) \
                  $(GLIB_LIBS) \
                  $(GLIB_GMODULE_LIBS) \
                  $(NULL)
endif
