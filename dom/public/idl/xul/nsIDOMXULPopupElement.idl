  const unsigned short      AT_POINTER                     = 10;
  const unsigned short      AFTER_POINTER                  = 11;

  attribute DOMString position;
  
  void showPopup(in unsigned short alignment, 
                 in nsIDOMElement target,
                 in nsIDOMElement anchor);
  void hidePopup();
};

