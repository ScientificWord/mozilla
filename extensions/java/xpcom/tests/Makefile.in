DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

DIRS = \
	testparams \
	$(NULL)

JAVA_LIBRARY_NAME = test_javaxpcom

JAVA_SRCS = \
	LocationProvider.java \
	TestINIParser.java \
	TestQI.java \
	TestVersionComparator.java \
	TestArray.java \
	TestProps.java \
	$(NULL)

JAVA_CLASSPATH = \
	../interfaces/MozillaInterfaces.jar \
	../interfaces/MozillaGlue.jar \
	$(JAVA_LIBRARY) \
	$(NULL)

include $(topsrcdir)/config/rules.mk

ifeq ($(OS_ARCH),Darwin)
DIST_BIN = $(PWD)/$(DIST)/XUL.framework/Versions/Current
else
DIST_BIN = $(PWD)/$(DIST)/bin
endif

# XXX Bug 373047 - Can't embed XULRunner using JavaXPCOM when XR is built
# using MSVC 2005.  So disable these tests on Windows platforms, for now.
check::
ifneq (,$(filter-out WINNT WINCE, $(HOST_OS_ARCH)))
	$(CYGWIN_WRAPPER) $(JAVA) -classpath $(_JAVA_CLASSPATH) TestINIParser
	$(CYGWIN_WRAPPER) $(JAVA) -classpath $(_JAVA_CLASSPATH) TestQI $(DIST_BIN)
	$(CYGWIN_WRAPPER) $(JAVA) -classpath $(_JAVA_CLASSPATH) TestVersionComparator
	$(CYGWIN_WRAPPER) $(JAVA) -classpath $(_JAVA_CLASSPATH) TestArray $(DIST_BIN)
	$(CYGWIN_WRAPPER) $(JAVA) -classpath $(_JAVA_CLASSPATH) TestProps $(DIST_BIN)
endif

