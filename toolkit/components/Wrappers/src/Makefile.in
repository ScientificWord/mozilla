SHARED_LIBRARY_LIBS += \
	$(DIST)/lib/$(LIB_PREFIX)computelib_s.$(LIB_SUFFIX) \
	$(DIST)/lib/$(LIB_PREFIX)enginelib_s.$(LIB_SUFFIX) \
	$(DIST)/lib/$(LIB_PREFIX)libtci_s.$(LIB_SUFFIX) \
	$(DIST)/lib/$(LIB_PREFIX)mupwrapperlib_s.$(LIB_SUFFIX) \
	$(NULL)

