SHARED_LIBRARY_LIBS += \
	$(srcdir)/../../Compute/MuPAD/win32/$(LIB_PREFIX)mupkernel.$(LIB_SUFFIX) \
	$(NULL)
endif

ifeq ($(OS_ARCH),Linux)
