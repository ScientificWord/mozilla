	$(srcdir)/../../Compute/MuPAD/linux/$(LIB_PREFIX)z.$(LIB_SUFFIX) \
	$(NULL)
endif
ifeq ($(OS_ARCH),Darwin)
SHARED_LIBRARY_LIBS += \
	$(srcdir)/../../Compute/MuPAD/Darwin/$(LIB_PREFIX)mupudskernel.$(LIB_SUFFIX) \
	$(NULL)
endif

include $(topsrcdir)/config/rules.mk

      
