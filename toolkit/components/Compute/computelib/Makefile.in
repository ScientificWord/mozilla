export:: $(MuPADbin)
	$(INSTALL) $(MuPADbin) $(FINAL_TARGET)/MuPAD/$(Platform)/bin

dump::
	echo $(MuPADlicense), $(MuPADbin), $(MuPADlib), $(MuPADmod), $(MuPADlibraries)

