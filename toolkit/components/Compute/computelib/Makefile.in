DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE = compute
MODULE_NAME = computeModule
LIBRARY_NAME = computelib_s
IS_COMPONENT = 1
EXPORT_LIBRARY = 1
LIBXUL_LIBRARY = 1
GRE_MODULE	= 1

MOZILLA_INTERNAL_API = 1
FORCE_STATIC_LIB = 1

MOZILLA_INTERNAL_API = 1

include $(topsrcdir)/config/config.mk

CPPSRCS =				\
  DefStore.cpp  \
  SNode.cpp \
  MRequest.cpp \
  MResult.cpp \
  PrefStor.cpp  \
  $(NULL)

REQUIRES = \
  string \
  xpcom \
  compute \
  $(NULL)



LOCAL_INCLUDES = -I$(srcdir)/../libtci	\
	-I$(srcdir)/../Engines	\
	-I$(srcdir)/../src \
	-I$(srcdir)/../public \
	$(NULL)


#Set platform
ifeq ($(OS_ARCH),WINNT)
  PLATFORM = win32
endif

ifeq ($(OS_ARCH),Darwin)
  PLATFORM = maci64
endif

ifeq ($(OS_ARCH),Linux)
  PLATFORM = linux
endif

SupportFiles	:= $(srcdir)/swfcns.mu 
MupInstall := $(srcdir)/../MuPAD/$(PLATFORM)/mupInstall.gmr
MuPADlib := $(wildcard $(srcdir)/../MuPAD/share/lib/*) 
MuPADmod		:= $(wildcard $(srcdir)/../MuPAD/$(PLATFORM)/modules/*) 
MuPADlibraries 	:= $(wildcard $(srcdir)/../MuPAD/$(PLATFORM)/lib/*)
MuPADbin	:= $(wildcard $(srcdir)/../MuPAD/$(PLATFORM)/bin/*) 

ifeq ($(OS_ARCH),WINNT)
MuPADlicense	:= $(srcdir)/../MuPAD/license/license
SupportFiles	+= $(srcdir)/../MuPAD/$(PLATFORM)/mupkernel.dll
endif

ifeq ($(OS_ARCH),Darwin)
MuPADlicense:=  $(srcdir)/../MuPAD/$(PLATFORM)/com.sciface.www.MuPADPro402.plist
QtLib	:= $(srcdir)/../MuPAD/maci/libQtCore.4.dylib
MuPADcodelib := $(wildcard $(srcdir)/../MuPAD/$(PLATFORM)/lib/*)
MuPADscript := $(wildcard) $(srcdir)/../MuPAD/share/bin/*
endif

ifeq ($(OS_ARCH),Linux)
MuPADlicense	:= $(srcdir)/../MuPAD/license/license 
MuPADbin := $(wildcard $(srcdir)/../MuPAD/linux/bin/*) 
MuPADcodelib := $(wildcard $(srcdir)/../MuPAD/linux/lib/*) 
MuPADmod := $(wildcard $(srcdir)/../MuPAD/linux/modules/*) 
endif


include $(topsrcdir)/config/rules.mk


export::$(MupInstall)
	$(INSTALL) $(MupInstall) $(FINAL_TARGET)

export:: $(MuPADmod)
	$(INSTALL) $(MuPADlicense) $(FINAL_TARGET)/MuPAD/license
	$(INSTALL) $(MuPADlib) $(FINAL_TARGET)/MuPAD/share/lib
	$(INSTALL) $(MuPADmod) $(FINAL_TARGET)/MuPAD/$(PLATFORM)/modules
	$(INSTALL)  $(MuPADbin) $(FINAL_TARGET)/MuPAD/$(PLATFORM)/bin
	$(INSTALL)  $(SupportFiles) $(FINAL_TARGET)

export:: $(MuPADcodelib)
	$(INSTALL) $(MuPADcodelib) $(FINAL_TARGET)/MuPAD/$(PLATFORM)/lib

export:: $(MuPADscript)
	$(INSTALL) $(MuPADscript) $(FINAL_TARGET)/MuPAD/share/bin

ifeq ($(OS_ARCH),Darwin)
export:: $(QtLib)
	$(INSTALL) $(QtLib) $(FINAL_TARGET)/../lib

endif

dump::
	echo $(MuPADlicense), $(MuPADbin), $(MuPADshare), $(MuPADmod), $(MuPADlibraries)

